{
    "compilerOptions": {
        "noImplicitAny": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "Node10",
        "sourceMap": true,
        "strictNullChecks": true,
        "strict": true,
        "module": "ES2022",
        "target": "ES2022",
        "noErrorTruncation": true,
        "outDir": "dist",
        "lib": ["ESNext", "dom"],
        "skipLibCheck": true
    }
}
